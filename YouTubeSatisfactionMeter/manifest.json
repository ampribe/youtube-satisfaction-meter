{
  "manifest_version": 2,
  "name": "YouTubeSatisfactionMeter",
  "version": "1.0",

  "description": "Where do you find the best YouTube videos? Find out with YouTubeSatisfactionMeter.",

  "icons": {
    "48": "icons/icon.png"
  },
  "browser_action": {
    "default_icon": "icons/icon.png",
    "default_title": "YouTubeSatisfactionMeter",
    "default_popup": "popup/popup.html"
  },

  "permissions": ["storage", "https://*.youtube.com/*", "tabs"],

  "background": {
    "scripts": ["background.js"],
    "persistent": false
  }
}
